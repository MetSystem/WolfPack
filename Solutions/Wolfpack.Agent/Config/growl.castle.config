<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<components>
		<component id="GrowlConfiguration"
					 lifestyle="singleton"
					 type="Wolfpack.Core.Growl.GrowlConfiguration, Wolfpack.Core">
			<parameters>
				<Enabled>true</Enabled>
				<FriendlyId>Growl</FriendlyId>
				<AppId>Wolfpack</AppId>
				<NotificationId>HealthCheck</NotificationId>
				<NotificationTitle>Platform HealthCheck</NotificationTitle>
				<IconFile>growl\agent.png</IconFile>
				<!-- optional params  
				<Password></Password>
				<Hostname></Hostname>
				<Port></Port>
				-->
			</parameters>
		</component>

		<!-- Valid Values for HigherPriority, LowerPriority are VeryLow, Normal, Moderate, High, Emergency -->	
		<component id="GlobalGrowlCountNotificationFinaliser"
					 lifestyle="transient"
					 service="Wolfpack.Core.Growl.IGrowlNotificationFormatter, Wolfpack.Core"
					 type="Wolfpack.Core.Growl.Formatters.GrowlCountFormatter, Wolfpack.Core">
			<parameters>
				<Check>*</Check>
				<EventType>*</EventType>
				<Threshold>2</Threshold>
				<HigherPriority>Emergency</HigherPriority>
				<HigherMessage></HigherMessage>
				<HigherIsSticky>true</HigherIsSticky>
				<LowerPriority>VeryLow</LowerPriority>
				<LowerMessage></LowerMessage>
				<LowerIsSticky>false</LowerIsSticky>
			</parameters>
		</component>
				
		<!-- Valid Values for OnSuccess, OnFailure are VeryLow, Normal, Moderate, High, Emergency -->
		<component id="GlobalGrowlSuccessNotificationFormatter"
					 lifestyle="transient"
					 service="Wolfpack.Core.Growl.IGrowlNotificationFormatter, Wolfpack.Core"
					 type="Wolfpack.Core.Growl.Formatters.GrowlResultFormatter, Wolfpack.Core">
			<parameters>
				<!-- Use the FriendlyId of the HealthCheck you want 
						 to attach this finaliser to or use * to apply to all -->
				<Check>*</Check>
				<EventType>*</EventType>
				<OnSuccess>Normal</OnSuccess>
				<!-- Leave this blank to use the default message -->
				<SuccessMessage></SuccessMessage>
				<SuccessIsSticky>false</SuccessIsSticky>
				<OnFailure>Emergency</OnFailure>
				<!-- Leave this blank to use the default message -->
				<FailureMessage></FailureMessage>
				<FailureIsSticky>true</FailureIsSticky>      
			</parameters>
		</component>    
	</components>
</configuration>
